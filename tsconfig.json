{
  "ts-node": {
    "scope": false,
    "transpileOnly": true
  },
  "compilerOptions": {
    "composite": true,
    "module": "CommonJS",
    "jsx": "react",
    "target": "ES2020",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": "."
  }
}
